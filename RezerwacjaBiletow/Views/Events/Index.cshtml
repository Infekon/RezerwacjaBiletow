@model IEnumerable<RezerwacjaBiletow.Models.Event>

@{
    ViewBag.Title = "Index";
}

<h2>Lista aktualnych wydarzeń</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Place)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Seats)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(Html.DisplayFor(modelItem => item.Title).ToHtmlString(), "Details", new { id = item.Id })
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Place)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Seats)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @if (User.IsInRole("Admin")) {
                @Html.ActionLink("Edycja", "Edit", new { id=item.Id }) 
                
                @Html.ActionLink("Usuń", "Delete", new { id=item.Id })
            }
        </td>
    </tr>
}

</table>
